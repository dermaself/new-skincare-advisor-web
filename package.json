{
  "name": "dermaself-workspace",
  "version": "1.0.0",
  "description": "Dermaself - Production-Ready Skincare Advisor",
  "private": true,
  "scripts": {
    "start": "npm run start:api",
    "start:api": "cd api && npm start",
